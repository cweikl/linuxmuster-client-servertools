#!/bin/sh
if [ -e /mnt/etc/hosts ]; then
    echo " - fixing hosts"

    HOSTS=/mnt/etc/hosts
    sed -i "s/HOSTNAME/$HOSTNAME/g" ${HOSTS}

    echo "      - done"
fi

# done in linuxmuster-client
